                                                                                                                                                                                                                <div class="col-lg-5 col-4">
                                                                                                                                                                                                                    <input type="text" class="form-control" name="paymentInput[`+ len + `].num"  inputmode="numeric" onkeyup="value = value.replace(/[^-0-9]/g,'')" alertMsg="期數" />
